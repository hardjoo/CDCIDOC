pipeline {
    agent any  
    tools {
        nodejs 'nodejs20'
        dockerTool 'docker'
    }

    stages {
        stage("git clone") {
            steps {
                git branch: 'main', url: 'https://github.com/aymenellouze/CI-CD-Documentation.git'
            }
        }

        stage("install dependencies") {
            steps {
                sh 'npm install'
            }
        }

        stage("build the project") {
            steps {
                sh 'npm run build'
            }
        }

        stage('sonarqube') {
            agent {
                docker {
                    image 'sonarsource/sonar-scanner-cli'
                    args '-v /var/run/docker.sock:/var/run/docker.sock --network cicddoc_hardjo'
                }
            }
            steps {
                sh '''
                    sonar-scanner \
                    -Dsonar.projectKey=djo \
                    -Dsonar.sources=. \
                    -Dsonar.host.url=http://172.19.0.6:9000 \
                    -Dsonar.token=sqp_b836dd5c8c2bbfee0aea4736d67a6c77eab3212a
                '''
            }
        }

        stage("docker build") {
            steps {
                sh '''
                    docker build -t prod .
                '''
            }
        }

        stage("docker push to nexus") {
        
            steps {
                    sh 'docker login localhost:8085 -u admin -p  hardjo@666'
                    sh ' docker tag prod localhost:8088/repos_nexus_formation/production:v2'
                    sh ' docker push localhost:8088/repos_nexus_formation/production:v2'

            }
        }

    }
}
